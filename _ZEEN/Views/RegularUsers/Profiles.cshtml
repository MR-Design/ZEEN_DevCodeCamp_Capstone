<div>

    <a asp-action="EditProfile" asp-controller="RegularUsers" class="btn btn-default">Edit</a>
</div>



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Profiles" asp-controller="RegularUsers">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />

            <div class="form-group">
                <label for="textArea" class="col-lg-2 control-label">
                    Contact : @Html.DisplayFor(model => model.user.UserName)
                </label>

                <div class="col-lg-10">
                    @Html.HiddenFor(uvm => uvm.user.ApplicationUserId)
                    @Html.DisplayFor(model => model.user.ApplicationUserId)

                    <textarea class="form-control" asp-for="@Model.message.Message"> </textarea>
                    <span asp-validation-for="@Model.message.Message" class="text-danger"></span>
                    <br />
                    <span class="help-block"></span>

                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="message.To" value="@Model.user.ApplicationUserId" />
                    <input type="submit" value="Send Message" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>
</div>



