<div>

    <a asp-action="EditProfile" asp-controller="RegularUsers" class="btn btn-default">Edit</a>
</div>



<hr />
<span>Contact : <strong>@Html.DisplayFor(model => model.user.UserName)</strong> </span>

<div class="container body-content">
    <div class="col-xs-6 col-md-6">
        <form asp-action="Profiles" asp-controller="RegularUsers">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />



                <div class="container-fluid">

                    <textarea class="form-control" rows="5" style="color:aliceblue; background-color:#222222;"  asp-for="@Model.message.Message"> </textarea>
                    <span asp-validation-for="@Model.message.Message" class="text-danger"></span>
                    <br />
                    <span class="help-block">@DateTime.Now</span>

                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="message.To" value="@Model.user.ApplicationUserId" />
                    <input type="hidden" asp-for="message.Sender" value="@Model.user.UserName" />
                    <input type="hidden" asp-for="message.DateSent" value="@DateTime.Now" />

                    <input type="submit" value="Send Message" class="btn btn-success" />
                </div>
        </form>
    </div>
</div>





