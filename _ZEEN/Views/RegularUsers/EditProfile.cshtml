@model _ZEEN.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Edit";
}



<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="user.Id" />



            <div class="form-group">
                <label asp-for="user.UserName" class="control-label"></label>
                <input asp-for="user.UserName" class="form-control" />
                <span asp-validation-for="user.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.FirstName" class="control-label"></label>
                <input asp-for="user.FirstName" class="form-control" />
                <span asp-validation-for="user.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.LastName" class="control-label"></label>
                <input asp-for="user.LastName" class="form-control" />
                <span asp-validation-for="user.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.WebSite" class="control-label"></label>
                <textarea asp-for="user.WebSite" class="form-control"></textarea>
                <span asp-validation-for="user.WebSite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.Bio" class="control-label"></label>
                <input asp-for="user.Bio" class="form-control" />
                <span asp-validation-for="user.Bio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="user.Street" class="control-label"></label>
                <input asp-for="user.Street" class="form-control" />
                <span asp-validation-for="user.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.City" class="control-label"></label>
                <input asp-for="user.City" class="form-control" />
                <span asp-validation-for="user.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.State" class="control-label"></label>
                <input asp-for="user.State" class="form-control" />
                <span asp-validation-for="user.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.ZipCode" class="control-label"></label>
                <input asp-for="user.ZipCode" class="form-control" />
                <span asp-validation-for="user.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user.AvatarImage" class="control-label"></label>
                <input type="file" name="files" multiple />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
