@model _ZEEN.Models.ViewModels.SellerViewModel

@{
    ViewData["Title"] = "Manage Orders";
}




  
<div class="container body-content mt-6">

    @foreach (var item in Model.users)
    {
        <div class="row text-zeen-dark">
            <div class="col-md-6 margin-auto mt-6">

                <div>
                    <strong>Please Ship it To </strong> : @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)
                </div>


                <div>
                    Adress:
                    @Html.DisplayFor(modelItem => item.Street),

                    @Html.DisplayFor(modelItem => item.City)

                    @Html.DisplayFor(modelItem => item.State)

                    @Html.DisplayFor(modelItem => item.ZipCode)


                </div>
            </div>
        </div>


    }

    @foreach (var item in Model.sales)
    {

        <div class="Row margin-auto text-zeen-dark">
            <div class="col-md-6 margin-auto">
                @Html.DisplayFor(modelItem => item.Detail)<br />

                <span> Price : $  </span>  @Html.DisplayFor(modelItem => item.UnitPrice)

                <div class="container"> <img class="d-block mx-auto mt-4" style="height: 150px; width: 50%;" src="@Html.DisplayFor(modelItem => item.Image)" alt="Card image"> </div>               
            </div>
            <br />
            <div class="form-group">
                <a asp-action="Ship" asp-route-id="@item.Id" class="btn btn-info">Ship Item</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Remove</a>

            </div>
            <hr class="socket" style="width:20%; opacity:.5;">
        </div>

    }

</div>
   
