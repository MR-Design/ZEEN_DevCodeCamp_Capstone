@model _ZEEN.Models.ViewModels.SellerViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="body-content">
    <div class="row">
        <div class="col-md-6">

            <div class="card mb-3 mt-6 no-hover"style="margin-top:10rem !important;">

                <img class="img-responsive" style="height: 350px; width: 100%; display: block;" src="@Html.DisplayFor(model => model.sale.Image)" alt="Card image">

                <div class="card-body">
                    <strong style="width:100%;">
                        <i class="far fa-thumbs-up"></i>

                        <span>
                            <a class="fb-share-button" data-href="https://moh-media.com/" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore"></a></a>

                            <a class="fb-comments" data-href="http://localhost:50489" data-width="100%" data-numposts="5"></a>
                        </span>


                    </strong>
                </div>


            </div>

        </div>

        <div class="col-md-6 mt-6 ">

            
            <div class="card no-hover" style="max-width: 40rem;">
                <div class="container text-center">
                    <a asp-action="Profiles" asp-controller="RegularUsers" asp-route-id="@Model.user.ApplicationUserId"> <span class="text-dark">@Html.DisplayFor(model => model.user.UserName)</span> </a>
                    <img class="img-responsive rounded-circle" style="height: 50px; width: 50px; display:block; margin:auto;" src="@Html.DisplayFor(model => model.user.AvatarImage)" alt="Card image">
                </div>
                <div class="card-body">
                    <h3 class="card-title">
                        @Html.DisplayFor(model => model.sale.Detail)
                    </h3>
                    <p class="card-text">
                        @Html.DisplayFor(model => model.sale.Discription)
                    </p>
                    <p class="card-text">
                        <span style="font-weight:bold;"> @Html.DisplayFor(model => model.sale.Brand)</span> | For @Html.DisplayFor(model => model.sale.Gender)
                    </p>

                    <h3 class="card-link" style="font-weight:900;">
                        $ @Html.DisplayFor(Model => Model.sale.UnitPrice)
                    </h3>

                    <span class="card-link" style="font-weight:900;">
                        @Html.DisplayNameFor(model => model.sale.Size)

                        <button class="btn btn-zeen no-hover"> @Html.DisplayFor(Model => Model.sale.Size)</button>


                    </span>
                </div>

                <a class="btn btn-zeen-r" asp-action="Payment" asp-controller="Payments" asp-route-id="@Model.sale.Id"> Buy Now </a>

            </div>

        </div>
    </div>

</div>

