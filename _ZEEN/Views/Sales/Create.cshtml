@model _ZEEN.Models.Sale

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid text-center text-zeen-dark">
    <form asp-action="Create" method="post" enctype="multipart/form-data"class="col-md-12">

        <div class="col-md-5 margin-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />


            <div class="form-group ">
                <label asp-for="Detail" class="control-label text-zeen-dark"></label>
                <input asp-for="Detail" class="form-control text-zeen-dark" />
                <span asp-validation-for="Detail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discription" class="control-label text-zeen-dark"></label>
                <textarea asp-for="Discription" class="form-control text-zeen-dark"></textarea>
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label text-zeen-dark"></label>
                <input asp-for="Category" class="form-control text-zeen-dark" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label text-zeen-dark"></label>
                <input asp-for="Gender" class="form-control text-zeen-dark" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5 margin-auto">
            <br />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label "></label>
                <input asp-for="Quantity" class="form-control text-zeen-dark" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label "></label>
                <input asp-for="Size" class="form-control text-zeen-dark" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label "></label>
                <input asp-for="Brand" class="form-control text-zeen-dark" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label "></label>
                <input asp-for="Color" class="form-control text-zeen-dark" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group text-zeen-dark">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control text-zeen-dark" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group text-zeen-dark">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" name="files" multiple class="btn btn-zeen-r" />
            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Sell" class="btn btn-zeen text-zeen-dark" />
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
